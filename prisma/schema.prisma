datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  password          String
  role              String    @default("USER")
  downloadPath      String?
  youtubeCookies    String?
  instagramCookies  String?
  xCookies          String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
